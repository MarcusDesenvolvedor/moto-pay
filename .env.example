# Database
DATABASE_URL=postgresql://user:password@localhost:5432/moto_pay?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3001

# API URL for mobile app - port must match PORT above (3001 or 8181)
# Emulador: http://10.0.2.2:3001 | Dispositivo f√≠sico: http://SEU_IP:3001 (ex: 192.168.100.139)
EXPO_PUBLIC_API_URL=http://192.168.100.139:3001

# Cloudinary - Backend (NUNCA expor no frontend)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Cloudinary - Frontend (upload unsigned)
# Crie um Upload Preset em: https://console.cloudinary.com/settings/upload/presets
# Tipo: Unsigned | Folder: avatars
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_unsigned_preset_name
